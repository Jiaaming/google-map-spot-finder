{
  "manifest_version": 3,
  "name": "SpotFinder - Places by Reviews",
  "version": "1.0",
  "description": "Find and sort Google Places by review count within a specified radius",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://maps.googleapis.com/*",
    "https://maps.google.com/*",
    "https://www.google.com/maps/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://maps.google.com/*", "https://www.google.com/maps/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SpotFinder"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png"
  }
}